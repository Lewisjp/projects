has_one 

z = Zombie.last
z.create_brain(status: "Squashed", flavor: "Mudd")
z.brain #see all attributes of that zombie's brain
z.brain.flavor # see only the flavor attribute of that zombies brain 

has_many
# to add a new role type
z.roles << Role.new(title: "Captain")

# to add a role reference that already exists
z.roles << Role.find_by_title("Captain")


